
Meteor.subscribe("all_players");

var reactive = null;
Tracker.autorun(function(){
  reactive = Players.find();
   console.log(reactive);

   reactive.forEach(function(x){
      console.log("entro");
      console.log(x.u);
   });
   console.log("salgo");
});

